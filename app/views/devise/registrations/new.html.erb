<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-lg-6 col-md-8 col-sm-10 mx-auto">
      <div class="card p-5">
        <h2 class="text-center mb-5">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <%= f.label :fname, "First Name:" %>
            <%= f.text_field :fname, autofocus: true, class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :lname, "Last Name:" %>
            <%= f.text_field :lname, class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :role %>
            <%= f.select :role, options_for_select(['Member'], selected: 'Member'), {}, { disabled: true, class: 'form-control', required: true } %>
            <%= f.hidden_field :role, value: 'Member' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :callsign, "Callsign (optional):" %>
            <%= f.text_field :callsign, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :email, "Email" %>
            <%= f.email_field :email, class: 'form-control', autocomplete: "email", required: true %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", required: true %>
          </div>

          <div class="form-group mb-5">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", required: true %>
          </div>

          <div class="actions mb-3">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
