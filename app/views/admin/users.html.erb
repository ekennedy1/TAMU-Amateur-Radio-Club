<div class="container">
  <h1 class="text-center">Admin Dashboard</h1>
  <%= render "admin/nav_links" %>
  <br>
  <button type="button" class="btn btn-primary mb-4" data-bs-toggle="collapse" data-bs-target="#newUserForm">
    Create a New User
  </button>
  <div class="collapse" id="newUserForm">
    <%= render 'create_form', user: User.new %>
  </div>

  <table class="table table-light table-striped">
    <thead>
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">Callsign</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.fname %></td>
          <td><%= user.lname %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= user.callsign %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
