<div class="container mt-4">
  <h1 class="text-center mb-4">Admin Dashboard</h1>
  <%= render "admin/nav_links" %>

  <!-- New User Form -->
  <%= form_for(User.new, url: admin_users_path, method: :post, html: { class: 'mb-4' }) do |f| %>
    <h2 class="mb-3">Add New User</h2>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :fname, "First Name" %>
        <%= f.text_field :fname, class: 'form-control' %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :lname, "Last Name" %>
        <%= f.text_field :lname, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :role, "Role" %>
        <%= f.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, { class: 'form-select' } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>
    <%= f.submit 'Create User', class: 'btn btn-success' %>
  <% end %>

  <!-- Existing Users Table -->
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead class="table-light">
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Role</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <%= form_for(user, url: admin_user_path(user), method: :patch) do |f| %>
            <tr>
              <td><%= f.text_field :fname, class: 'form-control' %></td>
              <td><%= f.text_field :lname, class: 'form-control' %></td>
              <td><%= f.email_field :email, class: 'form-control' %></td>
              <td>
                <%= f.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, { class: 'form-select' } %>
              </td>
              <td><%= f.submit 'Update', class: 'btn btn-primary' %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
