<%= form_for(user, url: create_admin_user_path, method: :post, html: { class: 'mb-4' }) do |f| %>
      <h2 class="mb-3">Add New User</h2>
      <div class="row">
        <div class="col-12 col-md-6 mb-3">
          <%= f.label :fname, "First Name" %>
          <%= f.text_field :fname, class: 'form-control' %>
        </div>
        <div class="col-12 col-md-6 mb-3">
          <%= f.label :lname, "Last Name" %>
          <%= f.text_field :lname, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 mb-3">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="col-12 col-md-6 mb-3">
          <%= f.label :role, "Role" %>
          <%= f.select :role, [['Member', 'Member'], ['Admin', 'Admin']], {}, { class: 'form-select' } %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 mb-3">
          <%= f.label :callsign, "Call Sign (optional)" %>
          <%= f.text_field :callsign, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 mb-3">
          <%= f.label :password, "Password" %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="col-12 col-md-6 mb-3">
          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <%= f.submit 'Create User', class: 'btn btn-success' %>
    <% end %>
