<div class="container">
  <h1>Inventory</h1>
  <%= link_to "Add Item", new_item_path %>
  <%= link_to "View Member Items", member_items_path %>
  <%= link_to "View All Items", items_path %>

  <!-- Search functionality --> 

  <%= form_with url: items_path, method: :get, local: true do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil %>
  <% end %>

  <div id="items">
    <% @items.each do |item| %>
      <%= render item %>
      <p>
        <%= link_to "Show", item %>
        <%= link_to "Edit", edit_item_path(item) %>
        <%= link_to "Delete", delete_item_path(item) %>
      </p>
    <% end %>
  </div>
  
  <%= link_to "Add Item", new_item_path %>
  <%= link_to "View Member Items", member_items_path %>
  <%= link_to 'Export Items', items_export_path, class: "button" %>
  <%= form_tag import_items_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
  <% end %>
</div>
