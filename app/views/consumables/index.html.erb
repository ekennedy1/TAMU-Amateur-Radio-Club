<div class="container mt-3">
  <h1>Listing Consumables</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity Remaining</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @consumables.each do |consumable| %>
        <tr>
          <td><%= consumable.name %></td>
          <td><%= consumable.description %></td>
          <td><%= consumable.quantity_remaining %></td>
          <td><%= link_to 'Show', consumable, class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_consumable_path(consumable), class: "btn btn-secondary btn-sm" %></td>
          <td><%= button_to 'Destroy', consumable, method: :delete, data: { confirm: 'Are you sure?' }, form: { class: 'inline' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Consumable', new_consumable_path, class: "btn btn-success" %>
</div>
