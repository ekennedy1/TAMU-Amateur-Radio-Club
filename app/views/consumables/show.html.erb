<div class="container mt-3">
  <% if notice %>
    <p id="notice" class="alert alert-info"><%= notice %></p>
  <% end %>

  <div class="card">
    <div class="card-header">
      <h3>Consumable Details</h3>
    </div>
    <div class="card-body">
      <p class="card-text">
        <strong>Name:</strong>
        <%= @consumable.name %>
      </p>
      <p class="card-text">
        <strong>Description:</strong>
        <%= @consumable.description %>
      </p>
      <p class="card-text">
        <strong>Quantity Remaining:</strong>
        <%= @consumable.quantity_remaining %>
      </p>

      <%= link_to 'Edit', edit_consumable_path(@consumable), class: "btn btn-primary btn-sm" %>  
      <%= link_to 'Back', consumables_path, class: "btn btn-secondary btn-sm" %>
    </div>
  </div>
</div>
